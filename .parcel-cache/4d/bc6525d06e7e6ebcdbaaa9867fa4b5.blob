      const v = count <= 1 ? 0.5 : y / (count - 1); // const radius = Math.abs(u, v) * 0.01;

      const radius = Math.abs(_random.default.noise2D(u, v)) * 0.01;
      points.push({
        position: [u, v],
        color: _random.default.pick(palette),
        // creates a much more random distribution of numbers
